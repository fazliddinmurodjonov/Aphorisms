<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Aphorisms" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/black_custom</item>
        <item name="android:navigationBarColor">@color/black_custom</item>
        <item name="android:windowBackground">@drawable/background_splash_night</item>
        <item name="colorAccent">@color/ripple_color</item>
        <item name="android:textColorHighlight">@color/ripple_color</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="colorOnSurface">@color/white_50</item>
        <item name="colorSecondary">@color/white_50</item>
        <item name="colorPrimary">@color/white_50</item>
        <item name="colorPrimaryDark">@color/white_50</item>
    </style>

    <style name="Theme.Aphorisms" parent="Base.Theme.Aphorisms" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/gray_custom</item>
    </style>


    <style name="text_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>